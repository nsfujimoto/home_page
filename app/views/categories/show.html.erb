<% @page_title = @category.name + "の記事一覧" %>

<h1><%= @page_title %></h1>

<table class="article">
<% @category.article.each do |article| %>
	<tr><td>
		<table class="article">
		<tr><td>
			<h3><%= link_to article.title, article %></h3>
		</td></tr>
		<tr><td>
			<article>
			<p><%= article.content.to_s.html_safe %></p>
			<p><%= article.body.truncate(200) %></p>
			<%= render "articles/article_footer", article: article%>
			</article>
		</td></tr>
		</table>
	</td></tr>
<% end %>
</table>
<%= link_to "Back", categories_path %>