<div id="profile">
<h3>Profile</h3>
<%= create_user_image_tag User.first, class: "profile_img" %>
<h4><%= User.first.nick_name %></h4>
<p class="profile_body">
<%= User.first.profile %>
</p>
</div>

<dl>
<dt>最新の記事</dt>
<% Article.new_articles.each do |article| %>
	<dd><%= link_to article.title, article %><small> by <%= link_to article.author.nick_name, article.author %></small></dd>
<% end %>
</dl>

<dl>
	<dt>カテゴリ一覧</dt>
<% Category.all.each do |category| %>
	<dd><%= link_to category.name, category %></dd>
<% end %>
</dl>