<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
		<% @cnt = 0 %>
    <% @photos.each_with_index do |photo, idx| %>
      <%= "<tr>".html_safe if idx % 4 == 0 %>
				<td>
					<div><%= link_to create_photo_image_tag(photo, alt: photo.name, class: "thumbnail"), [:admin, photo] %></div>
					<div><%= link_to "編集", edit_admin_photo_path(photo) %>/
							 <%= link_to "削除", [:admin, photo], method: :delete, data: {confirm: "削除しますか?" } %></div>
				</td>
			<%= "</tr>".html_safe if idx % 4 == 3 %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', "#" %>
