<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
		<% @cnt = 0 %>
    <% @photos.each_with_index do |photo, idx| %>
      <%= "<tr>".html_safe if idx % 4 == 0 %>
				<td><%= link_to create_photo_image_tag(photo, alt: photo.name, class: "thumbnail"), photo %></td>
			<%= "</tr>".html_safe if idx % 4 == 3 %>
    <% end %>
  </tbody>
</table>

<%= paginate @photos %>