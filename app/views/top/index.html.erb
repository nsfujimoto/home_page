<% @page_title = "Top" %>
<style>
.content_title {
	font-weight: inherit;
	border-bottom:
	1px dashed #000
}
</style>

<h2 class="content_title">最新記事</h2>
<% if Article.count != 0 %>
<% article = Article.new_articles(1).published.last %>
<table id="article" style="width:99%; table-layout:fixed">
	<tr><td>
		<h3 class="article_title"><%= link_to article.title, article %></h3>
	</td></tr>
	<tr><td>
		<article class="article">
		<%= markdown(article.content) %>
		<%= markdown(article.body.truncate(200)) %>
		</article>
		<%= render "articles/article_footer", article: article%>
	</td></tr>
	</table>
</td></tr>
<% end %>

