<% @page_title = "Top" %>
<style>
.content_title {
	font-weight: inherit;
	border-bottom:
	1px dashed #000
}
</style>

<h2 class="content_title">最新記事</h2>
<% article = Article.new_articles(1).last %>
<table id="article" style="width:98%">
	<tr><td>
		<h3 class="article_title"><%= link_to article.title, article %></h3>
	</td></tr>
	<tr><td>
		<article class = "article">
		<p><%= markdown(article.content) %></p>
		<p><%= markdown(article.body.truncate(200)) %></p>
		</article>
		<%= render "articles/article_footer", article: article%>
	</td></tr>
	</table>
</td></tr>


