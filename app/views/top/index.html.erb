<% @page_title = "Top" %>
<style>
h2 {
	font-weight: inherit;
	border-bottom:
	1px dashed #000
}
</style>


<h2>最新記事</h2>
<% article = Article.first %>
<table class="article" style="width: 98%; margin: 0 auto;">
	<tr><td>
		<h3><%= link_to article.title, article %></h3>
	</td></tr>
	<tr><td>
		<article>
		<p><%= article.content.to_s.html_safe %></p>
		<p><%= article.body.truncate(200) %></p>
		<%= render "articles/article_footer", article: article%>
		</article>
	</td></tr>
	</table>
</td></tr>


