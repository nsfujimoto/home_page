<% @page_title = "記事一覧" %>

<p id="notice"><%= notice %></p>

<% if current_user %>
<p><%= link_to "新規作成", new_admin_article_path %></p>
<% end %>

<%= paginate @articles %>

<% if @articles.present? %>
<table class="articles">
	<% @articles.each do |article| %>
	<tr><td style="padding-bottom: 50px">
		<table>
		<tr><td>
			<h3 class="article_title"><%= link_to article.title, article %></h3>
		</td></tr>
		<tr><td>
			<article class="article">
			<p><%= markdown(article.content) %></p>
			<p><%= markdown(article.body.truncate(200)) %></p>
			</article>
			<%= render "article_footer", article: article%>
		</td></tr>
		</table>
	</td></tr>
	<% end %>
</table>
<% else %>
	記事はありません
<% end %>

<%= paginate @articles %>